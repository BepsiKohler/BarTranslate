{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "airbnb/hooks",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ],
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "ignorePatterns": ["out", "assets", "webpack", "node_modules", "public", "docs"],
  "rules": {

    "max-len": [2, { "code": 120, "ignoreUrls": true }],
    "no-console": [1, {"allow": ["error", "info", "debug"]}],
    "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
    "import/prefer-default-export": 0,
    "@typescript-eslint/no-explicit-any": 2,

    // Function components should be defined with the function keyword
    "react/function-component-definition": [2, { "namedComponents": "function-declaration" }],

    // No need to specify a default value for a property that is not required
    "react/require-default-props": 0,

    // React in scope is not required since React 17
    "react/jsx-uses-react": 0,
    "react/react-in-jsx-scope": 0,

    // Allow labels to exist independently
    "jsx-a11y/label-has-associated-control": 0
  }
}
